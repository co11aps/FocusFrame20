/*MOBILE MENU START*/
.backdrop {
  /* position: absolute;  */
  position: fixed;
  z-index: 100000;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  inset: 0;
  background-color: rgba(18, 18, 18, 0.4);
  /* pointer-events: none; 
        opacity: 0; 
        visibility: hidden; */
}

.is-open {
  opacity: 1;
  visibility: visible;
}

.mob-modal {
  position: fixed;
  width: 100%;
  background-color: #bea69e;
  padding-top: 100px;
  position: relative;
  max-width: 218px;

  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) scale(1);

  transition: transform 250ms cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0px 1px 1px rgba(0, 0, 0, 0.14), 0px 1px 3px rgba(0, 0, 0, 0.12),
    0px 2px 1px rgba(0, 0, 0, 0.2);
}

@media screen and (min-width: 767.98px) and (max-width: 1279.98px) {
  .mob-modal {
    max-width: 480px;
  }
}

@media screen and (min-width: 1279.98px) {
  .backdrop {
    display: none;
  }
}
.mobile-close-btn {
  position: absolute;
  width: 32px;
  height: 32px;
  top: 20px;
  right: 20px;
  background-color: transparent;
  border: none;
  cursor: pointer;
  padding: 0;
  transition: stroke 250ms cubic-bezier(0.4, 0, 0.2, 1);
}

@media screen and (min-width: 767.98px) and (max-width: 1279.98px) {
  .mobile-close-btn {
    width: 40px;
    height: 40px;
    right: 32px;
  }
}

